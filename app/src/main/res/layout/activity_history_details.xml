<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="7dp"
                android:src="@drawable/back_white" />

            <com.user.albaz.rafiq.utils.MyBoldTextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/history"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="@string/trap_company"
                        android:textSize="@dimen/_30sdp"
                        android:textColor="@color/red"
                       android:layout_gravity="left|center_vertical"
                        />

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/ic_hacker"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_gravity="right|center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tripImg"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder" />

                    <LinearLayout
                        android:id="@+id/profile_detail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:text="@string/trip_date"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tripDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:lineSpacingMultiplier="1.5"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black_text_color"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/edit_trip_date"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:visibility="invisible"
                                android:padding="5dp"
                                android:tint="@color/blue"
                                app:srcCompat="@android:drawable/ic_menu_edit" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_weight="1"
                            android:background="#1a1a1a" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:text="@string/trip_time"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tripTime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:lineSpacingMultiplier="1.5"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black_text_color"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/edit_trip_time"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:padding="5dp"
                                android:visibility="invisible"
                                android:tint="@color/blue"
                                app:srcCompat="@android:drawable/ic_menu_edit" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#1a1a1a" />

                    <LinearLayout
                        android:id="@+id/sourceAndDestinationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="10dp"
                                android:src="@drawable/round_shape" />

                            <com.user.albaz.rafiq.utils.MyBoldTextView
                                android:id="@+id/tripSource"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="start"
                                android:text=""
                                android:textAlignment="viewStart" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="10dp"
                                android:src="@drawable/round_shape" />

                            <com.user.albaz.rafiq.utils.MyBoldTextView
                                android:id="@+id/tripDestination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="start"
                                android:textAlignment="viewStart" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/ViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#1a1a1a" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <com.user.albaz.rafiq.utils.MyBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_id"
                            android:textColor="@color/black_text_color"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <com.user.albaz.rafiq.utils.MyBoldTextView
                            android:id="@+id/booking_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black_text_color"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#1a1a1a" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <com.user.albaz.rafiq.utils.MyBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/payment_methods"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black_text_color"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/paymentTypeImg"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:padding="5dp"
                                android:src="@drawable/visa" />

                            <com.user.albaz.rafiq.utils.MyBoldTextView
                                android:id="@+id/paymentType"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|start"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black_text_color"
                                android:textSize="16sp" />

                            <com.user.albaz.rafiq.utils.MyBoldTextView
                                android:id="@+id/tripAmount"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|end"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/black_text_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#1a1a1a" />

                    <LinearLayout
                        android:id="@+id/lnrComments"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"

                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <com.user.albaz.rafiq.utils.MyBoldTextView
                            android:layout_width="wrap_content"
                          android:visibility="invisible"  android:layout_height="wrap_content"
                            android:text="@string/comments"
                            android:textColor="@color/black_text_color"
                            android:textSize="16sp" />

                        <com.user.albaz.rafiq.utils.MyBoldTextView
                            android:id="@+id/tripComments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:visibility="invisible"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black_text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/lnrUpcomingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:weightSum="2">

            <com.user.albaz.rafiq.utils.MyButton
                android:id="@+id/btnCancelRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:text="@string/cancel_ride"
                android:textAllCaps="true"
                android:textColor="@color/cancel_ride_color" />

            <com.user.albaz.rafiq.utils.MyButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:text="@string/edit_schedula"
                android:textAllCaps="true"
                android:textColor="@color/cancel_ride_color" />


        </LinearLayout>

        <com.user.albaz.rafiq.utils.MyButton
            android:id="@+id/btnConfirmRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/full_rounded_button"
            android:text="@string/Done_confirmation"
            android:textAllCaps="true"
            android:textColor="@color/cancel_ride_color"
            android:visibility="gone" />

        <com.user.albaz.rafiq.utils.MyButton
            android:id="@+id/btnViewInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/full_rounded_button"
            android:text="@string/view_invoice"
            android:textAllCaps="true"
            android:textColor="@color/cancel_ride_color"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Invoice Layout ...-->
    <LinearLayout
        android:id="@+id/lnrInvoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_white"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lnrInvoiceSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_white"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:orientation="vertical">

                <com.user.albaz.rafiq.utils.MyBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="@string/invoice"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:text="@string/booking_id"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:id="@+id/lblBookingID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:text="@string/sample_base_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:text="@string/base_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:id="@+id/lblBasePrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:text="@string/sample_base_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:text="@string/extra_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:id="@+id/lblExtraPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:text="@string/sample_base_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:text="@string/distance_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:id="@+id/lblDistancePrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:text="@string/sample_base_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:text="@string/tax"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:id="@+id/lblTaxPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:text="@string/sample_base_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="@string/total"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:id="@+id/lblTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="@string/sample_base_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgPaymentTypeInvoice"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/money_icon" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:id="@+id/lblPaymentTypeInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/selected_payment_mode"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.user.albaz.rafiq.utils.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:text="@string/change"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>



