<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_01_contentLayer_accept_or_reject_now"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="100"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/txt01Timer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/roundimage"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img01User"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/placeholder_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="start|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt01UserName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/sechedal_trip"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/txt01UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="@string/when_this_dialog_show"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="NestedWeights" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txtSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/schedule"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />

        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDateTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/calendar_clock"
                android:gravity="center|center_vertical"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <View
                android:id="@+id/view5"
                android:layout_width="1sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtTimeTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/calendar_clock"
                android:gravity="center|center_vertical"
                android:padding="5dp"
                android:textColor="@color/blue"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/blue" />

        <LinearLayout
            android:id="@+id/place_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/current_location"
                    android:padding="5dp"
                    android:text="@string/From"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/from_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/current_location"
                    android:padding="5dp"
                    android:text="@string/To"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/to_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_02_reject"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="50"
                android:background="@drawable/button_corner_black"
                android:padding="5dp"
                android:text="@string/cancel"
                android:textColor="@color/button_text_color"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/btn_02_accept"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="50"
                android:background="@drawable/button_corner_black"
                android:padding="5dp"
                android:text="@string/confirm_trip"
                android:textColor="@color/button_text_color" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>